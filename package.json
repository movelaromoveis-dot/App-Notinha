{
  "name": "notafacil-app",
  "version": "0.2.0",
  "description": "Notafacil - Point of Sale Note Management App",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev:web": "vite",
    "build:web": "vite build",
    "preview:web": "vite preview",
    "dev:backend": "node backend/server.js",
    "dev:electron": "cross-env APP_URL=http://localhost:5173 electron ./electron/main.js",
    "dev": "concurrently \"npm:dev:web\" \"npm:dev:backend\" \"npm:dev:electron\"",
    "dist": "npm run build:web && electron-builder --win",
    "dist:include-backend": "cross-env INCLUDE_BACKEND=true npm run build:web && electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^4.19.2",
    "idb": "^8.0.3",
    "pg": "^8.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^5.4.21"
  },
  "build": {
    "appId": "com.notafacil.app",
    "productName": "Notafacil",
    "files": [
      "dist/**",
      "electron/**",
      "node_modules/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "movelaromoveis-dot",
        "repo": "App-Notinha"
      }
    ]
  }
}
